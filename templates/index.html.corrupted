    <title>Nebula Crest - Beyond Boundaries, Beyond Digital</title>
    <link
        href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&family=JetBrains+Mono:wght@400;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
</head>

<body>
    <!-- Liquid Ether Background -->
    <div id="canvas-container"></div>

    <!-- Gooey Navigation -->
    <nav class="gooey-navigation">
        <div class="nav-logo">
            <i class="fa-solid fa-meteor"></i> NEBULA CREST
        </div>
        <ul class="nav-menu">
            <li><a href="#home" class="nav-link active" onclick="navigateTo('home'); return false;">Home</a></li>
            <li><a href="#about" class="nav-link" onclick="navigateTo('about'); return false;">About</a></li>
            <li><a href="#pricing" class="nav-link" onclick="navigateTo('pricing'); return false;">Pricing</a></li>
            <li><a href="#tool" class="nav-link" onclick="navigateTo('tool'); return false;">Tool</a></li>
            <div class="nav-blob"></div>
        </ul>
        <div class="nav-actions">
            {% if session.get('license_type') == 'developer' %}
            <span class="license-badge-nav dev"><i class="fa-solid fa-code"></i> DEVELOPER</span>
            {% elif session.get('license_type') == 'client' %}
            <span class="license-badge-nav client"><i class="fa-solid fa-users"></i> CLIENT</span>
            {% endif %}
            <a href="/logout" class="btn-nav-logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
        </div>
    </nav>

    <!-- Page: Home -->
    <section id="page-home" class="page-section active">
        <div class="hero-container">
            <h1 class="hero-title">
                <span class="blur-text" style="animation-delay: 0.1s;">NEBULA</span>
                <span class="blur-text" style="animation-delay: 0.2s;">CREST</span>
            </h1>
            <p class="hero-subtitle">
                <span class="blur-text" style="animation-delay: 0.5s;">Beyond</span>
                <span class="blur-text" style="animation-delay: 0.6s;">Boundaries,</span>
                <span class="blur-text" style="animation-delay: 0.7s;">Beyond</span>
                <span class="blur-text" style="animation-delay: 0.8s;">Digital</span>
            </p>
            <div class="hero-buttons" style="opacity: 0; animation: fade-in 1s ease 1.2s forwards;">
                <button class="btn-hero-primary" onclick="navigateTo('tool')">
                    <i class="fa-solid fa-rocket"></i> Launch Tool
                </button>
                <a href="#about" class="btn-hero-secondary" onclick="navigateTo('about'); return false;">
                    Learn More
                </a>
            </div>
        </div>
    </section>

    <!-- Page: About -->
    <section id="page-about" class="page-section">
        <div class="about-container">
            <h2 class="section-title">About Nebula Crest</h2>
            <p class="section-subtitle">Revolutionizing business data extraction with cutting-edge
                technology</p>

            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon"><i class="fa-solid fa-rocket"></i></div>
                    <h3>Lightning Fast</h3>
                    <p>Extract hundreds of business contacts in minutes with our optimized scraping
                        engine</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon"><i class="fa-solid fa-shield-halved"></i></div>
                    <h3>Secure & Reliable</h3>
                    <p>Enterprise-grade security with 99.9% uptime guarantee</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon"><i class="fa-solid fa-chart-line"></i></div>
                    <h3>Advanced Analytics</h3>
                    <p>Get detailed insights with phone, email, social media, and ad pixel detection</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon"><i class="fa-solid fa-code"></i></div>
                    <h3>API Access</h3>
                    <p>Integrate seamlessly with your workflow using our RESTful API</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Page: Pricing -->
    <section id="page-pricing" class="page-section">
        <div class="pricing-container">
            <h2 class="section-title">Choose Your Plan</h2>
            <p class="section-subtitle">Start free, scale as you grow</p>

            <div class="pricing-cards">
                <div class="pricing-card">
                    <div class="plan-header">
                        <h3>Basic</h3>
                        <div class="plan-price">
                            <span class="price-amount">$20</span>
                            <span class="price-period">/month</span>
                        </div>
                    </div>
                    <ul class="plan-features">
                        <li><i class="fa-solid fa-check"></i> 100 businesses per search</li>
                        <li><i class="fa-solid fa-check"></i> Basic contact info</li>
                        <li><i class="fa-solid fa-check"></i> Excel/CSV export</li>
                        <li><i class="fa-solid fa-check"></i> Email support</li>
                        <li class="feature-disabled"><i class="fa-solid fa-xmark"></i> Social media
                            extraction</li>
                        <li class="feature-disabled"><i class="fa-solid fa-xmark"></i> Ad pixel
                            detection</li>
                        <li class="feature-disabled"><i class="fa-solid fa-xmark"></i> API access</li>
                    </ul>
                    <a href="/signup?plan=basic" class="btn-plan">Get Started</a>
                </div>

                <div class="pricing-card featured">
                    <div class="plan-badge">MOST POPULAR</div>
                    <div class="plan-header">
                        <h3>Premium</h3>
                        <div class="plan-price">
                            <span class="price-amount">$40</span>
                            <span class="price-period">/month</span>
                        </div>
                    </div>
                    <ul class="plan-features">
                        <li><i class="fa-solid fa-check"></i> <strong>Unlimited</strong> searches</li>
                        <li><i class="fa-solid fa-check"></i> All basic features</li>
                        <li><i class="fa-solid fa-check"></i> Social media links</li>
                        <li><i class="fa-solid fa-check"></i> Ad pixel detection</li>
                        <li><i class="fa-solid fa-check"></i> Email extraction</li>
                        <li><i class="fa-solid fa-check"></i> Priority support (24/7)</li>
                        <li><i class="fa-solid fa-check"></i> API access</li>
                        <li><i class="fa-solid fa-check"></i> Custom export formats</li>
                    </ul>
                    <a href="/signup?plan=premium" class="btn-plan premium">Get Premium</a>
                </div>
            </div>
        </div>
    </section>

